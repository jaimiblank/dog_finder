<div class="container mt-4">
  <h1>Booking Details</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Booking for <%= @booking.dog.name %></h5>
      <p class="card-text"><strong>Start Date:</strong> <%= @booking.start_date.strftime('%B %d, %Y') %></p>
      <p class="card-text"><strong>End Date:</strong> <%= @booking.end_date.strftime('%B %d, %Y') %></p>
      <%# <p class="card-text"><strong>Status:</strong> <%= @booking.status.capitalize %></p>

    </div>
  </div>


  <div class="mt-4">
    <h3>Dog Details</h3>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= @booking.dog.name %></h5>
        <p class="card-text"><strong>Breed:</strong> <%= @booking.dog.breed %></p>
        <p class="card-text"><strong>Age:</strong> <%= @booking.dog.age %> years old</p>
        <p class="card-text"><strong>Bio:</strong> <%= @booking.dog.bio %></p>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to All Bookings", bookings_path, class: "btn btn-secondary" %>
    <%# <%= link_to "Edit Booking", edit_booking_path(@booking), class: "btn btn-primary" if @booking.pending? %>
    <%# <%= link_to "Cancel Booking", booking_path(@booking), method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" }, class: "btn btn-danger" if @booking.can_cancel? %> 
  </div>
</div>
