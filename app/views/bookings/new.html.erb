<div class="container">
welcome to the booking page! You're creating a booking for <%= @dog.name %>
<%= simple_form_for [@dog,@booking] do |f| %>
  <%= f.input :start_date, as: :string, input_html: {class: 'datepicker'} %>
  <%= f.input :end_date, as: :string, input_html: {class: 'datepicker'} %>
  <%= f.button :submit %>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    flatpickr('.datepicker', {
      enableTime: false,
      dateFormat: 'Y-m-d'
    });
  });
</script>
</div>
