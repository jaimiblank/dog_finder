<div class="container mt-4">
  <h1 class="mb-4">Your Bookings</h1> 

  <% if @user.present? %>
    <% if @user.bookings.any? %>
      <div class="row">
        <% @user.bookings.each do |booking| %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= booking.dog.name %></h5>
                <p class="card-text">
                  <strong>Start Date:</strong> <%= booking.start_date %><br>
                  <strong>End Date:</strong> <%= booking.end_date %>
                </p>
                <%= link_to "View Details", booking_path(booking), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>You don't have any bookings yet.</p>
    <% end %>
  <% else %>
    <p>Please sign in to view your bookings.</p>
  <% end %>
</div>
