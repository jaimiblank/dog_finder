<h1>Listing All Dogs</h1>

<div class="d-flex justify-content-end">
  <%= link_to "Add new 🐾", new_dog_path, class: "btn btn-info" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Bio</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= image_tag dog.image, class: "avatar", alt: "#{dog.name}'s avatar" if dog.image.attached? %></td>
        <td><%= dog.name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.age %></td>
        <td><%= dog.bio %></td>

        <td>
          <%= link_to 'Show', dog_path(dog), class: 'btn btn-info' %>
          <%# <%= link_to 'Edit', edit_dog_path(dog), class: 'btn btn-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
