<div class="puppy-wrap">
  <div class="text-center">
    <%= link_to "Add your dog", new_dog_path, class: "btn btn-danger btn-lg mx-3 rounded-pill text-white" %>
    <%= link_to 'Show the dogs', dogs_path, class: 'btn btn-danger btn-lg rounded-pill text-white' %>
  </div>
  <div class="text-center mb-4">
    <h2>Here are some of our Friends you can find here:</h2>
  </div>
  <div class="puppy-preview d-flex flex-wrap justify-content-center">
    <% @dogs.each do |dog| %>
      <div class="dog-item m-3 text-center">
        <% if dog.image.attached? %>
          <%= link_to dog_path(dog) do %>
            <% if dog.image.attached? %>
              <%= image_tag dog.image, size: "300x200", class: "img-fluid rounded shadow" %>
            <% end %>
          <p class="mt-2 font-weight-bold text-red-underline"><%= dog.name %></p>

          <% end %>
        <% else %>
          <% if user_signed_in? %>
            <%= image_tag dog.image, size: "300x200", class: "img-fluid rounded shadow" %>
          <% end %>
       <p class="mt-2 font-weight-bold text-red-underline"><%= dog.name %></p>

        <% end %>
      </div>
    <% end %>
  </div>
</div>
