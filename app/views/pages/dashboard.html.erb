<div class="container mt-4">
  <div class="dashboard-nav text-center mb-4 d-flex justify-content-center">
    <%= link_to "Add your dog", new_dog_path, class: "btn btn-danger btn-lg mx-2 rounded-pill text-white" %>
    <%= link_to 'Show all dogs', dogs_path, class: 'btn btn-danger btn-lg mx-2 rounded-pill text-white' %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title mb-4">My Dogs</h2>
          <% @dogs.each do |dog| %>
            <div class="dog-item mb-4 p-3 border rounded">
              <h4><%= link_to dog.name, dog, class: "text-decoration-none text-danger" %></h4>
              <p class="mb-2"><strong>Breed:</strong> <%= dog.breed %></p>
              <p class="mb-2"><strong>Age:</strong> <%= dog.age %></p>
              <p class="mb-3"><%= dog.bio %></p>
              <% if dog.image.attached? %>
                <%= cl_image_tag dog.image.key, class: "img-fluid rounded mb-3" %>
              <% else %>
                <%= cl_image_tag "https://res.cloudinary.com/dqdmlrr95/image/upload/v1725017523/dogfoot_gkjo1x.png", class: "img-fluid rounded mb-3" %>
              <% end %>
              <div class="mt-2">
                <%= link_to edit_dog_path(dog), class: "btn btn-sm btn-outline-primary me-2" do %>
                  <i class="fas fa-edit"></i> Edit
                <% end %>
                <%= button_to dog_path(dog), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this dog?" }, class: "btn btn-sm btn-outline-danger" do %>
                  <i class="fas fa-trash-alt"></i> Delete
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title mb-4">Bookings</h2>
          <div class="status-legend mb-3">
            <span class="badge bg-warning me-2">Pending</span>
            <span class="badge bg-success">Approved</span>
          </div>

          <% if @bookings_as_owner.any? %>
            <h3 class="h5 mb-3">My Dog's Bookings</h3>
            <% @bookings_as_owner.select { |b| b.status == 'pending' }.each do |booking| %>
              <div class="card mb-3 border-warning">
                <div class="card-body">
                  <!-- ... (booking details) ... -->
                </div>
              </div>
            <% end %>

            <h3 class="h5 mb-3 mt-4">My Bookings</h3>
            <% @bookings_as_customer.each do |booking| %>
              <div class="card mb-3 <%= booking.status == 'approved' ? 'border-success' : 'border-warning' %>">
                <div class="card-body">
                  <!-- ... (booking details) ... -->
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No bookings available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
