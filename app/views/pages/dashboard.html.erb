<div class="dashboard-container">
  <div class="dashboard-nav">
    <%= link_to "Add your dog", new_dog_path, class: "btn btn-info" %>
    <%= link_to 'Show the dogs', dogs_path, class: 'btn btn-info' %>
  </div>

  <div class="dashboard-content">
    <div class="dogs-section">
      <h2 style="text-align: center; padding: 20px;">My Dogs</h2>
      <div class="dogs-flex-container" style="display: flex; overflow-x: auto;">
        <% @dogs.each do |dog| %>
          <div class="dog-card" style="flex: 0 0 auto; margin-right: 20px; width: 250px; border: 1px solid #ccc; border-radius: 8px; padding: 10px;">
            <h3><%= link_to dog.name, dog %></h3>
            <p><strong>Breed:</strong> <%= dog.breed %></p>
            <p><strong>Age:</strong> <%= dog.age %></p>
            <p><%= dog.bio %></p>
            <div class="dog-image">
              <% if dog.image.attached? %>
                <%= image_tag dog.image, class: "dog-photo", style: "width: 100%; height: auto;" %>
              <% else %>
                <%= image_tag "dog.png", class: "dog-photo", style: "width: 100%; height: auto;" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

    <div class="bookings-section">
      <h2 style="text-align: center; padding: 20px;"> My Bookings</h2>
      <div class="bookings-flex-container" style="display: flex; overflow-x: auto;">
        <% if @bookings.any? %>
          <% @bookings.each do |booking| %>
            <div class="booking-card" style="flex: 0 0 auto; margin-right: 20px; width: 250px; border: 1px solid #ccc; border-radius: 8px; padding: 10px;">
              <h3>Dog: <%= link_to booking.dog.name, dog_path(booking.dog) %></h3>
              <p><strong>Date:</strong> <%= booking.start_date %> to <%= booking.end_date %></p>
            </div>
          <% end %>
        <% else %>
          <p class="no-bookings" style="border: 1px solid #ccc; border-radius: 8px; padding: 10px;">No bookings available.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
